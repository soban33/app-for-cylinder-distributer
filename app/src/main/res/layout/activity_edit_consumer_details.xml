<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditConsumerDetails"
    >
    <ImageView
        android:id="@+id/img_consumerHomeImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/img_placeholder"
        android:scaleType="centerCrop"
        android:background="@drawable/roundback_first"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="@color/purple_200"
            app:cardCornerRadius="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_addimage"
                    android:layout_marginStart="10dp"
                    app:civ_border_width="5dp"
                    app:civ_border_color="@color/purple_500"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Image"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/white"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="@color/purple_200"
            app:cardCornerRadius="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_locationbluebackg"
                    android:layout_marginStart="10dp"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/purple_500"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Location"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/white"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        >
        <TextView
            android:id="@+id/txt_consumerNameEdt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Consumer Name Here"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/purple_500"
            android:drawableStart="@drawable/ic_person"
            android:drawableTint="@color/purple_500"
            android:drawablePadding="14dp"
            android:layout_weight="8"
            />
        <ImageView
            android:id="@+id/img_editName"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            app:tint="@color/purple_500"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        >
        <TextView
            android:id="@+id/txt_consumeridEdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="7000000000946124"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/purple_200"
            android:drawableStart="@drawable/ic_key"
            android:drawableTint="@color/purple_200"
            android:drawablePadding="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="-"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/purple_200"
            />

        <TextView
            android:id="@+id/txt_consumerNumEdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="CX00008765"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/purple_200"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        >
        <TextView
            android:id="@+id/txt_consumerAddressEdt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="44 SANJAY VITTHALRAO KULKARNI HOUSE , OPPOSITE MAHALAXHMI PROVISION , MAHESH NAGAR NAVASARI NAVASARI , MH003 , IN , 444601"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_location"
            android:drawableTint="@color/purple_200"
            android:drawablePadding="15dp"
            android:layout_weight="8"
            />
        <ImageView
            android:id="@+id/img_editAddress"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            app:tint="@color/purple_500"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/txt_consumerLandmarkEdt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="VILAS NAGAR"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/purple_200"
            android:layout_weight="8"
            android:paddingStart="40dp"
            />
        <ImageView
            android:id="@+id/img_editLandMark"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            app:tint="@color/purple_500"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/txt_consumerCityEdt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Amravati"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/purple_200"
            android:layout_weight="8"
            android:paddingStart="40dp"
            />
        <ImageView
            android:id="@+id/img_editCity"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            app:tint="@color/purple_500"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/txt_consumerMobileNumEdt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="9403387314"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_phone"
            android:drawableTint="@color/purple_200"
            android:drawablePadding="15dp"
            android:layout_weight="8"
            />
        <ImageView
            android:id="@+id/img_editMobileNumber"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            app:tint="@color/purple_500"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/txt_consumerTypeEdt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="single bottle connection"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_account_round"
            android:drawableTint="@color/purple_200"
            android:drawablePadding="15dp"
            android:layout_weight="8"
            />
        <ImageView
            android:id="@+id/img_editType"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            app:tint="@color/purple_500"
            />
    </LinearLayout>

</LinearLayout>